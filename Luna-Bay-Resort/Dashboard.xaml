<Window x:Class="Luna_Bay_Resort.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:Luna_Bay_Resort.Controls"
        Title="Dashboard" Height="900" Width="1600"  WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- For the NavBar -->
            <RowDefinition Height="*" />
            <!-- For the Main Content -->
        </Grid.RowDefinitions>

        
        <!-- Your NavBarControl -->
        <local:NavBarControl x:Name="NavBar" Margin="0,-69,0,665" Grid.RowSpan="2" />
        <ContentControl x:Name="MainContent" Grid.Row="1" Margin="0,59,0,0">
            <!-- This is where the user controls will be displayed -->
        </ContentControl>
    </Grid>
</Window>


